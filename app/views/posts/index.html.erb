<h1>Market</h1>

<div class='container'>
  <div class='posts'>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Type</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>

      <% @posts.each do |post| %>
      <td> <%= post.title %> </td>
      <td><img src= <%= post.url %>> </td>
      <td> <%= post.price %> </td>
      <td> <%= link_to "Show" , post %> </td>
      <td> <%= link_to "Edit" , edit_post_path(post) %></td>
      <td> <%= link_to "Delete" , post, method: :delete %> </td>
      <% end %>
    </tbody>
  </table>

  </div>
</div>
